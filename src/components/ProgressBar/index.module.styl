.progress_box {
  position: relative;
  width: 100%;
  height: 50px;
  margin-bottom: 8px;
  user-select: none;
  border: 1px solid #363637;
  :global(.line_box) {
    position: absolute;
    box-sizing: border-box;
    min-width: 1px;
    border: 1px solid #f00;
    top: 0;
    // left: 0;
    background: rgba($color: #000, $alpha: .3);
    z-index: 3;
    &::before {
      position: absolute;
      left: -8px;
      top: -1px;
      content: '';
      width: 7px;
      height: 48px;
      background-color: rgba($color: #fff, $alpha: 0.5);
    }
    &::after {
      position: absolute;
      right: -8px;
      top: -1px;
      content: '';
      width: 7px;
      height: 48px;
      background-color: rgba($color: #fff, $alpha: 0.5);
    }
  }
  :global(.selection_box) {
    opacity: 0;
    min-width: 1;
    position: absolute;
    box-sizing: border-box;
    border: 1px solid #f00;
    top: 0;
    // left: 33px;
    background: rgba($color: #999, $alpha: .6);
    z-index: 2;
  }
}
